#include<stdio.h>

int Summation(int iNo)
{
	int iSum = 0;
	int iCnt =0;
	
	if(iNo<0)
	{
		iNo=-iNo;
	}
	
	for( iCnt=1; iCnt<=iNo; iCnt++)
	{
		iSum = iSum + iCnt;	
		return iSum;
	}
	
}

int main()
{
	int iValue = 0;
	int iRet = 0;
	printf("Enter the number");
	scanf("%d\n",iValue);
	
	iRet = Summation(iValue);
	printf("Your addition is %d",iRet);
	
	
	return 0;
}